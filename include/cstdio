// -*- C++ -*-
#ifndef _EZCXX_CSTDIO
#define _EZCXX_CSTDIO

#include <stdio.h>

#pragma clang system_header

namespace std {
using ::size_t;
using ::FILE;

using ::fopen;
using ::fclose;
using ::fflush;
using ::ferror;
using ::feof;
using ::clearerr;
using ::fputs;
using ::fread;
using ::fwrite;
using ::ftell;
using ::fseek;
using ::fgetc;
using ::fputc;
using ::fgets;
using ::remove;
using ::rewind;
using ::getchar;
using ::putchar;
using ::puts;

#ifdef HAS_PRINTF
using ::printf;
using ::vprintf;
using ::vsprintf;
using ::snprintf;
using ::vsnprintf;
#endif // HAS_PRINTF
using ::sprintf;
} // namespace std

#endif // _EZCXX_CSTDINT
